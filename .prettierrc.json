{
  "printWidth": 100,
  "plugins": [
    "@ianvs/prettier-plugin-sort-imports",
    "@prettier/plugin-php",
    "@shufo/prettier-plugin-blade",
    "prettier-plugin-tailwindcss"
  ],
  "overrides": [
    {
      "files": "**/*.yml",
      "options": {
        "tabWidth": 2
      }
    },
    {
      "files": ["*.blade.php"],
      "options": {
        "parser": "blade"
      }
    }
  ],
  "importOrder": [
    "<BUILTIN_MODULES>",
    "^(react/(.*)$)|^(react$)",
    "^(react-dom/(.*)$)|^(react-dom$)",
    "^(@inertiajs/(.*)$)|^(@inertiajs$)",
    "^(laravel-vite-plugin/(.*)$)|^(laravel-vite-plugin$)",
    "<THIRD_PARTY_MODULES>",
    "",
    "^@/config/(.*)$",
    "^@/lib/(.*)$",
    "^@/hooks/(.*)$",
    "^@/components/ui/(.*)$",
    "^@/components/(.*)$",
    "^@/styles/(.*)$",
    "",
    "<TYPES>",
    "<TYPES>^@/types/(.*)$",
    "<TYPES>^[./]",
    "",
    "^[./]"
  ],
  "tailwindStylesheet": "resources/css/app.css",
  "tailwindFunctions": ["clsx", "cn"]
}
